<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BACKGROUND"
    android:fillViewport="true"
    tools:context=".presentation.ui.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/B1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:text="회원가입"
            android:textColor="@color/BLACK" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                style="@style/B5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 이름을 입력해주세요"
                android:textColor="@color/GS_800" />

            <EditText
                android:id="@+id/nameEditText"
                style="@style/B5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/box_stroke_r8_200"
                android:hint="ex. 김단국"
                android:paddingStart="12dp"
                android:paddingTop="14dp"
                android:paddingEnd="12dp"
                android:paddingBottom="14dp"
                android:textColorHint="@color/GS_400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                style="@style/B5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. 학번을 입력해주세요"
                android:textColor="@color/GS_800" />

            <EditText
                android:id="@+id/numberEditText"
                style="@style/B5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/box_stroke_r8_200"
                android:hint="ex. 32210000"
                android:paddingStart="12dp"
                android:paddingTop="14dp"
                android:paddingEnd="12dp"
                android:paddingBottom="14dp"
                android:textColorHint="@color/GS_400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                style="@style/B5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. 아이디를 입력해주세요"
                android:textColor="@color/GS_800" />

            <EditText
                android:id="@+id/idEditText"
                style="@style/B5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/box_stroke_r8_200"
                android:hint="ex. dankook"
                android:paddingStart="12dp"
                android:paddingTop="14dp"
                android:paddingEnd="12dp"
                android:paddingBottom="14dp"
                android:textColorHint="@color/GS_400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                style="@style/B5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. 비밀번호를 입력해주세요"
                android:textColor="@color/GS_800" />

            <EditText
                android:id="@+id/pwEditText"
                style="@style/B5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/box_stroke_r8_200"
                android:inputType="numberPassword"
                android:paddingStart="12dp"
                android:paddingTop="14dp"
                android:paddingEnd="12dp"
                android:paddingBottom="14dp" />

        </LinearLayout>

        <TextView
            style="@style/B5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="44dp"
            android:text="5. 동아리 소속 여부를 체크해주세요"
            android:textColor="@color/GS_800" />

        <RadioGroup
            android:id="@+id/isInCircleRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/inBtn"
                style="@style/B5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio"
                android:checked="true"
                android:drawablePadding="8dp"
                android:paddingEnd="60dp"
                android:text="소속"
                android:textColor="@color/GS_700" />

            <RadioButton
                android:id="@+id/notInBtn"
                style="@style/B5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio"
                android:drawablePadding="8dp"
                android:text="비소속"
                android:textColor="@color/GS_700" />
        </RadioGroup>


        <TextView
            style="@style/B5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="44dp"
            android:text="5-1. 소속 동아리 정보를 입력해주세요"
            android:textColor="@color/GS_800" />

        <TextView
            style="@style/B6_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="* 동아리 소속 학생만 답변"
            android:textColor="@color/GS_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/box_stroke_r8_200"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                style="@style/B6_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동아리 이름"
                android:textColor="@color/GS_800" />

            <EditText
                style="@style/B6_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex. Aegis"
                android:textColorHint="@color/GS_400" />

            <TextView
                style="@style/B6_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="임원 여부"
                android:textColor="@color/GS_800" />

            <RadioGroup
                android:id="@+id/isInCircleRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/inBtn"
                    style="@style/B5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_radio"
                    android:checked="true"
                    android:drawablePadding="8dp"
                    android:paddingEnd="60dp"
                    android:text="회장"
                    android:textColor="@color/GS_700" />

                <RadioButton
                    android:id="@+id/notInBtn"
                    style="@style/B5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_radio"
                    android:drawablePadding="8dp"
                    android:text="부원"
                    android:textColor="@color/GS_700" />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/addCircleBtn"
            style="@style/B7_1"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box_non_stroke_r85"
            android:backgroundTint="@color/GS_300"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="+ 소속 동아리 추가"
            android:textColor="@color/BLACK" />


        <TextView
            style="@style/B5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="44dp"
            android:text="5-2. 소속 동아리 인증 캡처본을 첨부해주세요\n        (웹정보>학사정보>학생관리>동아리활동확인서발급)"
            android:textColor="@color/GS_800" />

        <TextView
            style="@style/B6_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="* 동아리 소속 학생만 답변"
            android:textColor="@color/GS_500" />

        <Button
            android:id="@+id/addCircleBtn"
            style="@style/B7_1"
            android:layout_width="64dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box_non_stroke_r85"
            android:backgroundTint="@color/BLACK"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="+ 추가"
            android:textColor="@color/WHITE" />

        <Button
            android:id="@+id/registerBtn"
            style="@style/B3_1"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/box_non_stroke_r8_blue"
            android:text="회원가입"
            android:textColor="@color/WHITE" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>